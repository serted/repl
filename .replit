modules = ["php-8.2", "nodejs-20", "web"]
run = "php run"

[nix]
channel = "stable-25_05"
packages = ["postgresql"]

[deployment]
run = ["sh", "-c", "php run"]

[workflows]
runButton = "Run PHP Server"

[[workflows.workflow]]
name = "Run PHP Server"
author = 47060306
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php -S 0.0.0.0:5000 -t ."

[[workflows.workflow]]
name = "Download Assets and Run"
author = 47060306
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php tools/download-assets.php"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php -S 0.0.0.0:5000 -t ."

[[ports]]
localPort = 5000
externalPort = 80
